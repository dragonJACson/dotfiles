# Set default values for all following accounts.
defaults
auth           oauthbearer
tls            on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
logfile        ~/.msmtp.log

# Gmail
account        gmail
host           smtp.gmail.com
proxy_host     127.0.0.1
proxy_port     7891
port           587
from           {{ .msmtprc.user }}
user           {{ .msmtprc.user }}
passwordeval   "{{ .msmtprc.passwordeval }}"

account default : gmail
